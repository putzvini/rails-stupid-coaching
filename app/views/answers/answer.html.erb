<div class=container>
  <h1>Stupid Coaching</h1>
  <div class="d-flex flex-column">
    <div class="card mb-5">
      <div class="card-header">
        <h3>You</h3>
      </div>
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <p><%= @answer %></p>
        </blockquote>
      </div>    
    </div>
    
    <div class="card mb-5">
      <div class="card-header">
        <h3>Your coach</h3>
      </div> 
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <p><strong><%= @coach %></strong></p>
        </blockquote>
      </div>
    </div>
  </div>
  <%= link_to "Ask a new question", ask_path%>
  <%#= link_to TEXTO DO LINK, PATH_DO_LINK %>
</div>
